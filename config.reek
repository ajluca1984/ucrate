#recommended Rails settings for reek
"app/controllers":
  IrresponsibleModule:
    enabled: false
  NestedIterators:
    max_allowed_nesting: 2
  UnusedPrivateMethod:
    enabled: false
"app/helpers":
  IrresponsibleModule:
    enabled: false
  UtilityFunction:
    enabled: false

#exclude everything in spec, everything in app that's not ruby code (i.e. views, assets)
exclude_paths:
 - spec
 - app/assets
 - app/views	
 - db/migrate
